---
pageable: true
per_page: 2
---

<ol class="videos">
  <% page_articles.each_with_index do |article, i| %>
  <li>
    <% if article.data.video %>
    <article class="video">
      <div class="video-container">
        <iframe width="960" height="720" src="<%= article.data.video %>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
      </div>
    <% else %>
      <article class="no-video">
    <% end %>

      <div class="video-text">
        <h2><%= link_to article.title, article %> </h2>
        <time><%= article.date.strftime('%b %e') %></time>
        <%= article.body %>
      </div>
    </article>
    <hr />
  </li>
  <% end %>
</ol>

<% if paginate %>
  <nav class="pagination">
    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  </nav>
<% end %>
